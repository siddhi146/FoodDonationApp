<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    android:orientation="vertical"
    tools:context=".Thankyou">

    <ImageView
        android:id="@+id/imgv"
        android:layout_width="wrap_content"
        android:layout_height="450dp"
        android:src="@drawable/th2"></ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="2dp"
        android:text="We appreciate your efforts."
        android:textSize="25dp"
        android:textColor="@color/darkk"
        android:textStyle="bold"
        app:fontFamily="cursive"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingHorizontal="2dp"
        android:paddingBottom="10dp"
        android:text="Keep Donating!!!"
        android:textColor="@color/darkk"
        android:textSize="30sp"
        android:textStyle="bold"
        app:fontFamily="cursive"></TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:columnCount="3"
        android:orientation="horizontal"
        android:rowCount="1">

        <Button
            android:id="@+id/home"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Home"
            android:textColor="@color/darkk"
            android:textColorHighlight="#000000"
            android:textColorLink="#DA92AA"></Button>

        <Button
            android:id="@+id/logout"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/l5"
            android:textColor="@color/darkk"
            android:textColorHighlight="#000000"
            android:textColorLink="#DA92AA"></Button>


    </LinearLayout>


</LinearLayout>
